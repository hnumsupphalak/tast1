public class Production {
  public static void main (String[] args) {
     int product = 2000;
     int year = 0;
     while (product <= 5000) {
        product = product + 365;
        year++;
        System.out.println("ปีที่ = " + year);
        System.out.println("สินค้าส่งออก = " + product);
     }
     System.out.println("ใช้เวลาทั้งหมด = " + year + " ปี ");
  }
}
